@model IEnumerable<Schooldb.Models.Teacher>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageUrl)
            </th>
            <th>@Html.DisplayNameFor(model => model.TeachersEducations)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @{ var formattedDate = item.DateOfBirth.Value.ToString("dd MMM yyyy");
                        @Html.DisplayFor(modelItem => formattedDate)
                    }
                    <!--Html.DisplayFor(modelItem => item.DateOfBirth)-->
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>
                <td>
                    <img src="@item.ImageUrl" onerror="this.style.display='none'" />
                    <!--Html.DisplayFor(modelItem => item.ImageUrl)-->
                </td>
                <td>
                    @if (item.TeachersEducations != null)
                    {
                        <ul>
                            @foreach (var teachersEdu in item.TeachersEducations)
                            {
                                <li>@teachersEdu.Education.Code</li>
                            }
                        </ul>
                    }
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
